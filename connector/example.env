# =========================================================
# APPLICATION
# =========================================================
NODE_ENV=local
PORT=3000

# =========================================================
# QUEUE CONFIGURATION
# Values: mock | kafka
# =========================================================
QUEUE_PROVIDER=mock

# Used only when QUEUE_PROVIDER=kafka
KAFKA_BROKERS=localhost:9092

# =========================================================
# MONGODB (STATE + LOCKS)
# =========================================================
# false = in-memory mocks (default, safe for local/tests)
# true  = real MongoDB (production)
MONGO_ENABLED=false

# Used only when MONGO_ENABLED=true
MONGO_URI=mongodb://localhost:27017/connector

# =========================================================
# SHAREPOINT (MICROSOFT GRAPH)
# =========================================================
# false = mock Graph (tests / local)
# true  = real Microsoft Graph (prod)
SP_ENABLED=false

SP_TENANT_ID=mock-tenant
SP_CLIENT_ID=mock-client-id
SP_CLIENT_SECRET=mock-client-secret

# =========================================================
# OBSERVABILITY
# =========================================================
# logger: console (default)
# metrics: console (default)
LOG_PROVIDER=console
METRICS_PROVIDER=console

# Enable basic tracing logs
TRACING_ENABLED=true

# =========================================================
# SWAGGER (OPENAPI)
# =========================================================
SWAGGER_ENABLED=true
SWAGGER_PATH=/swagger