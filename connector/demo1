async listModifiedFiles(
  driveId: string,
  since?: Date,
) {
  const filter = since
    ? `&$filter=lastModifiedDateTime gt ${since.toISOString()}`
    : '';

  const res = await this.api(
    `https://graph.microsoft.com/v1.0/drives/${driveId}/root/children?$top=999${filter}`,
  );

  return res.data.value;
}
