async listModifiedFilesSince(
  driveId: string,
  sinceISOTime: string, // e.g. 2025-01-20T10:00:00Z
): Promise<any[]> {
  const response = await this.client
    .api(`/drives/${driveId}/root/search(q='')`)
    .filter(`lastModifiedDateTime ge ${sinceISOTime}`)
    .select(
      'id,name,eTag,lastModifiedDateTime,size,file,parentReference',
    )
    .get();

  return (response.value || []).filter(
    (item: any) => item.file && !item.deleted,
  );
}
